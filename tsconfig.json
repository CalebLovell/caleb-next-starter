{
	"compilerOptions": {
		"baseUrl": "./src",
		"paths": {
			"@components/*": [
				"components/*"
			],
			"@api/*": [
				"api/*"
			],
			"@types/*": [
				"types/*"
			],
			"@hooks/*": [
				"hooks/*"
			]
		},
		"allowJs": true,
		"alwaysStrict": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"lib": [
			"dom",
			"es2017"
		],
		"module": "esnext",
		"moduleResolution": "node",
		"noEmit": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitAny": false,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"strict": false,
		"strictNullChecks": true,
		"target": "esnext",
	},
	"exclude": [
		"node_modules"
	],
	"include": [
		"**/*.ts",
		"**/*.tsx"
	]
}